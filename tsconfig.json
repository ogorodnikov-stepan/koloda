{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "assets/*": ["src/assets/*"],
      "config/*": ["src/config/*"],
      "features/*": ["src/features/*"]
    },
    "resolveJsonModule": true,
    "strict": true,
    "sourceMap": true,
    "target": "esnext"
  },
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}